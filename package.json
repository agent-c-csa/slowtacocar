{
  "name": "slowtacocar",
  "version": "1.0.0",
  "description": "The homepage for slowtacocar.com",
  "main": "index.js",
  "scripts": {
    "build": "npm run css",
    "css-compile": "node-sass --include-path node_modules --output-style compressed --source-map true --source-map-contents true --precision 6 scss -o public/",
    "css-prefix": "postcss --replace public/bootstrap.css --use autoprefixer --map",
    "css-purge": "purgecss --css public/bootstrap.css --content index.html --output public/",
    "css": "npm run css-compile && npm run css-prefix",
    "server": "serve --listen 3000",
    "watch": "nodemon -e html,scss -x \"npm run css\"",
    "test": "npm run css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/slowtacocar/slowtacocar.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/slowtacocar/slowtacocar/issues"
  },
  "homepage": "https://github.com/slowtacocar/slowtacocar#readme",
  "dependencies": {
    "bootstrap": "^4.5.0",
    "jquery": "^3.5.1",
    "popper.js": "1.16.1-lts"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.0",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.4",
    "postcss-cli": "^7.1.1",
    "purgecss": "^2.1.2",
    "serve": "^11.3.0"
  }
}
